{
  "title": "Vivaldi config",
  "rules": [
    {
      "description": "ctrl+shift+p/n to up/down arrow (only on Vivaldi)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.vivaldi\\.Vivaldi"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.vivaldi\\.Vivaldi"
              ]
            }
          ]
        }
      ]
    }
  ]
}
