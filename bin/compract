compract::usage() {
  name=`basename $0`
  cat <<EOF
Usage:
  compract OPTION [COMPRESS COMMAND] targets... [-n CREATE FILE/DIR NAME]
OPTIONS:
  -c    Compress files
  -e    Extract files
  -h    Display usage
COMPRESS COMMANDS:
  zip   targets => .zip
  gz    targets => .tar.gz
  bz    targets => .tar.bz2
EOF
}

