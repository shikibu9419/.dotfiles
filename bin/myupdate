#!/bin/zsh

message() {
  printf "\e[31;1mUPDATE: \e[37;1m$1\e[m\n"
}

reloadenv() {
  source ~/.zshenv && source ~/.zshrc > /dev/null
}

reloadenv

message 'zplug'
zplug install && zplug update

message 'brew'
brew update && brew upgrade && brew cleanup

message 'vscode'
code --list-extensions > $DOTPATH/etc/init/vscode-extensions

echo 'Reloading...'
reloadenv
