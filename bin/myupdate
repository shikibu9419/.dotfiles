#!/bin/zsh

echo "UPDATE: brew..."
brew update
brew upgrade
brew cleanup

echo "UPDATE: zplug..."
source ~/.zshrc > /dev/null
if ! zplug check --verbose; then
  printf "Install? [y/N]: "
  if read -q; then
    echo; zplug install
  fi
fi

echo "UPDATE: VSCode..."
code --list-extensions > ~/dotfiles/init/vscode/package_list.txt

echo "Reloading..."
source ~/.zshrc
