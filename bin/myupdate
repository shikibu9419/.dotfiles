#!/bin/zsh

message() {
  printf "\e[31;1mUPDATE: \e[37;1m$1\e[m\n"
}

reloadenv() {
  source ~/.zshenv && source ~/.zprofile && source ~/.zshrc > /dev/null
}

reloadenv

message 'zplug'
if ! zplug check --verbose; then
  printf 'Install? [y/N]: '
  if read -q; then
    echo; zplug install
  fi
fi
zplug update

message 'vscode'
code --list-extensions > $DOTPATH/init/vscode-extensions

message 'brew'
brew update
brew upgrade
brew cleanup

echo 'Reloading...'
reloadenv
